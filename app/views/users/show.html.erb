<h1><%= @user.name %></h1>

<h2>My Events</h2>

<% if @user.created_events.any? %>
 <% @user.created_events.each do |event| %>
  <h3><u><%= event.description %></u></h3>
  <p><%= event.event_date %></p>
  <br>
 <% end %>
<% end %>

<h2>Attending Events</h2>

<% if @user.attended_events.any? %>
 <% @user.attended_events.each do |event| %>
  <h3><u><%= event.description %></u></h3>
  <p><%= event.event_date %></p>
  <br>
 <% end %>
<% end %>

<%= link_to "Create a New Event", new_event_path %>
<br>
<%= link_to "All Events", '/events' %>
